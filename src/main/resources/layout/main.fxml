<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.shape.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="720.0" minWidth="800.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS">
         <content>
            <Label fx:id="logLabel" textAlignment="JUSTIFY" wrapText="true">
               <padding>
                  <Insets left="10.0" right="10.0" />
               </padding>
            </Label>
         </content>
      </ScrollPane>
      <HBox>
         <children>
            <AnchorPane fx:id="mapPane" maxHeight="600.0" maxWidth="600.0" minHeight="600.0" minWidth="600.0" />
            <VBox fx:id="controlBox" alignment="CENTER_LEFT" spacing="20.0" visible="false" HBox.hgrow="ALWAYS">
               <children>
                  <Button fx:id="moveBtn" mnemonicParsing="false" text="移动" />
                  <Label fx:id="moveDesc" text="Label" />
                  <Button fx:id="skillBtn" mnemonicParsing="false" text="技能" />
                  <Label fx:id="skillDesc" text="Label" />
                  <HBox alignment="CENTER" spacing="10.0">
                     <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                     </padding>
                     <children>
                        <Button fx:id="cancelBtn" mnemonicParsing="false" text="取消" />
                        <Button fx:id="submitBtn" disable="true" mnemonicParsing="false" text="确定" />
                     </children>
                  </HBox>
               </children>
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
            </VBox>
         </children>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </HBox>
   </children>
</VBox>
